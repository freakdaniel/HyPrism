<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             xmlns:converters="using:HyPrism.UI.Converters"
             xmlns:btn="using:HyPrism.UI.Components.Buttons"
             x:Class="HyPrism.UI.App"
             RequestedThemeVariant="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="HytaleOrange">#FFA845</Color>
            <Color x:Key="HytaleOrangeDark">#FF6B35</Color>
            <Color x:Key="HytaleDark">#090909</Color>
            <Color x:Key="HytaleDarkLight">#0d0d0d</Color>
            
            <!-- Dynamic Theme System -->
            <Color x:Key="SystemAccentColor">#FFA845</Color>
            <SolidColorBrush x:Key="SystemAccentBrush" Color="{StaticResource SystemAccentColor}" />

            <SolidColorBrush x:Key="HytaleOrangeBrush" Color="{StaticResource HytaleOrange}"/>
            <SolidColorBrush x:Key="HytaleOrangeDarkBrush" Color="{StaticResource HytaleOrangeDark}"/>
            <SolidColorBrush x:Key="HytaleDarkBrush" Color="{StaticResource HytaleDark}"/>
            <SolidColorBrush x:Key="HytaleDarkLightBrush" Color="{StaticResource HytaleDarkLight}"/>
            
            <!-- Converters -->
            <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
            <converters:TabPositionConverter x:Key="TabPositionConverter"/>
            <converters:StringEqualityConverter x:Key="StringEqualityConverter"/>
            <converters:BoolToDoubleConverter x:Key="BoolToOpacityConverter" TrueValue="1" FalseValue="0"/>
            <converters:BoolToThicknessConverter x:Key="BoolToLaunchCheckboxMarginConverter" />
        </ResourceDictionary>
    </Application.Resources>
    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://HyPrism/UI/Components/Buttons/IconButton/IconButtonStyles.axaml"/>
        <StyleInclude Source="avares://HyPrism/UI/Components/Buttons/PrimaryButton/PrimaryButtonStyles.axaml"/>
        
        <Style Selector="svg|Svg">
            <Setter Property="Css" Value="* { stroke: white !important; fill: none !important; }"/>
        </Style>
    </Application.Styles>
</Application>
