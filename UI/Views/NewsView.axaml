<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HyPrism.UI.ViewModels"
             xmlns:cards="using:HyPrism.UI.Components.Cards"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             xmlns:trans="using:HyPrism.UI.Views.Transitions"
             xmlns:asyncImageLoader="clr-namespace:AsyncImageLoader;assembly=AsyncImageLoader.Avalonia"
             mc:Ignorable="d" d:DesignWidth="380" d:DesignHeight="700"
             x:Class="HyPrism.UI.Views.NewsView"
             x:DataType="vm:NewsViewModel">
    
    <UserControl.Styles>
        <!-- Animated Tab Indicator -->
        <Style Selector="Border.tab-indicator">
            <Setter Property="Transitions">
                <Transitions>
                    <DoubleTransition Property="(Canvas.Left)" Duration="0:0:0.5" Easing="0.16,1,0.3,1"/>
                </Transitions>
            </Setter>
        </Style>
        
        <!-- Tab Button Style -->
        <Style Selector="Button.tab-btn">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="Button.tab-btn:pointerover /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <Style Selector="Button.tab-btn:pressed /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <Style Selector="Button.tab-btn:disabled /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
        <Style Selector="Button.tab-btn:pointerover">
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.tab-btn.active">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Opacity" Value="1"/>
        </Style>
        
        <Style Selector="Button.tab-btn.active /template/ ContentPresenter#PART_ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="TextElement.Foreground" Value="Black"/>
        </Style>
        
        <Style Selector="Button.tab-btn:disabled">
            <Setter Property="Opacity" Value="1"/>
        </Style>
        
        <!-- News Card Style -->
        <Style Selector="Button.news-card">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Border.news-card-content">
            <Setter Property="Background" Value="#CC252525"/>
            <Setter Property="BorderBrush" Value="#333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        
        <Style Selector="Button.news-card:pointerover Border.news-card-content">
            <Setter Property="Background" Value="#CC2D2D2D"/>
            <Setter Property="BorderBrush" Value="#444"/>
        </Style>
    </UserControl.Styles>
    
    <Grid VerticalAlignment="Stretch" ColumnDefinitions="*, Auto, *" ClipToBounds="False">
        
        <!-- COLUMN 1: LEFT NAVIGATION (Cards) -->
        <!-- We use a flexible width column now to allow centering the Hub -->
        <Grid Grid.Column="0" RowDefinitions="Auto, *" Margin="20,0,0,0" ClipToBounds="False">
            
            <!-- Tab Switcher (Top Left) -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Spacing="15" Margin="0,0,0,20" HorizontalAlignment="Left">
                <Button Classes="tab-btn" 
                        Classes.active="{Binding ActiveFilter, Converter={StaticResource StringEqualityConverter}, ConverterParameter='all'}" 
                        Command="{Binding SetFilterCommand}" CommandParameter="all">
                    <TextBlock Text="{Binding NewsAll^}" FontWeight="SemiBold"/>
                </Button>
                <Button Classes="tab-btn" 
                        Classes.active="{Binding ActiveFilter, Converter={StaticResource StringEqualityConverter}, ConverterParameter='hytale'}" 
                        Command="{Binding SetFilterCommand}" CommandParameter="hytale">
                    <TextBlock Text="{Binding NewsHytale^}" FontWeight="SemiBold"/>
                </Button>
                <Button Classes="tab-btn" 
                        Classes.active="{Binding ActiveFilter, Converter={StaticResource StringEqualityConverter}, ConverterParameter='hyprism'}" 
                        Command="{Binding SetFilterCommand}" CommandParameter="hyprism">
                    <TextBlock Text="{Binding NewsHyPrism^}" FontWeight="SemiBold"/>
                </Button>
            </StackPanel>
            
            <!-- Wheel List -->
            <Grid Grid.Row="1" Background="Transparent" Name="ScrollArea" ClipToBounds="False">
                 <Panel Background="Transparent"/> <!-- Catch scroll events -->
                 
                 <!-- We use a Panel instead of StackPanel so we can absolutely position items relative to Center (0,0) -->
                 <!-- ClipToBounds=False is CRITICAL to allow items to flow outside the grid if needed -->
                 <ItemsControl ItemsSource="{Binding VisibleItems}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,220,0" ClipToBounds="False">
                     <ItemsControl.Styles>
                         <Style Selector="ContentPresenter">
                             <Setter Property="Canvas.ZIndex" Value="{Binding ZIndex}"/>
                         </Style>
                     </ItemsControl.Styles>
                     <ItemsControl.ItemsPanel>
                         <ItemsPanelTemplate>
                             <Panel /> 
                         </ItemsPanelTemplate>
                     </ItemsControl.ItemsPanel>
                     <ItemsControl.ItemTemplate>
                         <DataTemplate>
                             <Grid Width="360" Height="80">
                                 <!-- Transformations for the Wheel Effect -->
                                 <Grid.RenderTransform>
                                     <TransformGroup>
                                         <TranslateTransform X="{Binding TranslateX}" Y="{Binding TranslateY}"/>
                                         <!-- Rotate slightly to face center if desired, or keep flat -->
                                         <RotateTransform Angle="{Binding Angle}"/>
                                         <ScaleTransform ScaleX="{Binding Scale}" ScaleY="{Binding Scale}"/>
                                     </TransformGroup>
                                 </Grid.RenderTransform>
                                 
                                 <Grid.Transitions>
                                     <Transitions>
                                         <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.4" Easing="CubicEaseOut"/>
                                         <!-- Animating BlurRadius might be expensive, careful -->
                                     </Transitions>
                                 </Grid.Transitions>
                                 
                                 <Border CornerRadius="12"
                                     ClipToBounds="True"
                                     Opacity="{Binding Opacity}"
                                     BorderBrush="#66FFFFFF"
                                     BorderThickness="1"
                                     BoxShadow="0 10 24 0 #70000000">
                                     <Border.Effect>
                                         <BlurEffect Radius="{Binding BlurRadius}"/>
                                     </Border.Effect>
                                     <Grid>
                                         <!-- Background image (blurred, enlarged, darkened) -->
                                         <asyncImageLoader:AdvancedImage Source="{Binding Data.ImageUrl}" Stretch="UniformToFill">
                                             <asyncImageLoader:AdvancedImage.Effect>
                                                 <BlurEffect Radius="18"/>
                                             </asyncImageLoader:AdvancedImage.Effect>
                                             <asyncImageLoader:AdvancedImage.RenderTransform>
                                                 <ScaleTransform ScaleX="1.4" ScaleY="1.4"/>
                                             </asyncImageLoader:AdvancedImage.RenderTransform>
                                         </asyncImageLoader:AdvancedImage>
                                         <Border Background="#C0000000"/>
                                         <!-- Glass overlay -->
                                         <Border Background="#14FFFFFF"/>
                                         <Border>
                                             <Border.Background>
                                                 <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                     <GradientStop Color="#22FFFFFF" Offset="0"/>
                                                     <GradientStop Color="#0AFFFFFF" Offset="1"/>
                                                 </LinearGradientBrush>
                                             </Border.Background>
                                         </Border>
                                         
                                         <Grid Margin="12">
                                             <StackPanel VerticalAlignment="Center" HorizontalAlignment="Right">
                                                 <TextBlock Text="{Binding Data.Title}" Foreground="White" TextTrimming="CharacterEllipsis" FontSize="14" FontWeight="SemiBold" TextAlignment="Right"/>
                                                 <Grid ColumnDefinitions="*, Auto" Margin="0,4,0,0" HorizontalAlignment="Right">
                                                     <TextBlock Grid.Column="0" Text="{Binding Data.Date}" Foreground="#E6FFFFFF" FontSize="12" Margin="0,0,8,0"/>
                                                     <Border Grid.Column="1" Background="#33FFFFFF" CornerRadius="4" Padding="6,2">
                                                         <TextBlock Text="{Binding Data.Source}" FontSize="10" Foreground="#F5FFFFFF"/>
                                                     </Border>
                                                 </Grid>
                                             </StackPanel>
                                         </Grid>
                                     </Grid>
                                 </Border>
                             </Grid>
                         </DataTemplate>
                     </ItemsControl.ItemTemplate>
                 </ItemsControl>
            </Grid>
        </Grid>
        
        <!-- COLUMN 2: CENTER HUB (Transparent Placeholder) -->
        <Grid Grid.Column="1" VerticalAlignment="Center" Width="400" Height="400">
            <TransitioningContentControl Content="{Binding SelectedNewsItem.ImageUrl}">
                <TransitioningContentControl.PageTransition>
                    <trans:OffsetFadeTransition Duration="0:0:0.45" Offset="20" IsHorizontal="False" />
                </TransitioningContentControl.PageTransition>
                <TransitioningContentControl.ContentTemplate>
                    <DataTemplate>
                        <Border Width="320"
                                Height="320"
                                CornerRadius="160"
                                ClipToBounds="True"
                                BoxShadow="0 12 30 0 #50000000">
                            <Grid>
                                <asyncImageLoader:AdvancedImage Source="{Binding}" Stretch="UniformToFill">
                                    <asyncImageLoader:AdvancedImage.RenderTransform>
                                        <ScaleTransform ScaleX="1.15" ScaleY="1.15"/>
                                    </asyncImageLoader:AdvancedImage.RenderTransform>
                                </asyncImageLoader:AdvancedImage>
                                <Border Background="#66000000"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </TransitioningContentControl.ContentTemplate>
            </TransitioningContentControl>
        </Grid>
        
        <!-- COLUMN 3: RIGHT CONTENT -->
        <Border Grid.Column="2" Padding="60,0,60,0" VerticalAlignment="Center" MaxWidth="600">
            <Grid MaxHeight="600" Height="520" ClipToBounds="True">
                <TransitioningContentControl Content="{Binding SelectedNewsItem}"
                                             VerticalContentAlignment="Center"
                                             HorizontalContentAlignment="Stretch">
                    <TransitioningContentControl.PageTransition>
                        <trans:OffsetFadeTransition Duration="0:0:0.45" Offset="24" IsHorizontal="False" />
                    </TransitioningContentControl.PageTransition>
                    <TransitioningContentControl.ContentTemplate>
                        <DataTemplate>
                            <Grid IsVisible="{Binding Converter={x:Static ObjectConverters.IsNotNull}}">
                                <Grid.RenderTransform>
                                    <TranslateTransform/>
                                </Grid.RenderTransform>
                                
                                <StackPanel Spacing="18">
                                    <!-- Title -->
                                    <TextBlock Text="{Binding Title}" 
                                               FontSize="28" 
                                               FontWeight="Bold" 
                                               Foreground="White" 
                                               TextWrapping="Wrap"
                                               LineHeight="36"
                                               MaxLines="3"
                                               TextTrimming="CharacterEllipsis"/>
                                    
                                    <!-- Excerpt with Read More -->
                                    <StackPanel Spacing="8">
                                        <TextBlock Foreground="#CCC" 
                                                   FontSize="15" 
                                                   LineHeight="24" 
                                                   TextWrapping="Wrap"
                                                   MaxLines="5"
                                                   TextTrimming="CharacterEllipsis"
                                                   Text="{Binding Excerpt}"/>
                                        
                                        <!-- Read More Link -->
                                        <Button Command="{Binding DataContext.OpenLinkCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                CommandParameter="{Binding Url}"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                HorizontalAlignment="Left"
                                                Cursor="Hand">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Style>
                                            </Button.Styles>
                                            <StackPanel Orientation="Horizontal" Spacing="6">
                                                <TextBlock Text="Read more" 
                                                           Foreground="{DynamicResource SystemAccentBrush}"
                                                           FontSize="15"
                                                           FontWeight="SemiBold"/>
                                                <svg:Svg Path="/Assets/Icons/chevron-right.svg" 
                                                         Width="14" 
                                                         Height="14"
                                                         Css="svg { fill: {DynamicResource SystemAccentBrush}; }"/>
                                            </StackPanel>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </TransitioningContentControl.ContentTemplate>
                </TransitioningContentControl>
            </Grid>
        </Border>

    </Grid>
</UserControl>
