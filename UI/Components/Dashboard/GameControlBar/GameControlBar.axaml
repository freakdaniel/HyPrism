<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HyPrism.UI.ViewModels"
             xmlns:btn="using:HyPrism.UI.Components.Buttons"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="100"
             x:Class="HyPrism.UI.Components.Dashboard.GameControlBar"
             x:DataType="vm:Dashboard.GameControlViewModel">

    <UserControl.Styles>
        <Style Selector="Button.VersionAreaButton">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="24,0"/>
            <Setter Property="CornerRadius" Value="10,0,0,10"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <ControlTemplate>
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{TemplateBinding CornerRadius}"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter Content="{TemplateBinding Content}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}"
                                          HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                </ControlTemplate>
            </Setter>
        </Style>
        <Style Selector="Button.VersionAreaButton /template/ Border">
            <Setter Property="RenderTransform" Value="scale(1)"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="0:0:0.15"/>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.15"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Button.VersionAreaButton:pointerover /template/ Border">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Opacity" Value="0.9"/>
            <Setter Property="RenderTransform" Value="scale(0.97)"/>
        </Style>
        <Style Selector="Button.VersionAreaButton:pressed /template/ Border">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Opacity" Value="0.85"/>
            <Setter Property="RenderTransform" Value="scale(0.95)"/>
        </Style>
        <Style Selector="Button.VersionAreaButton TextBlock">
            <Setter Property="Foreground" Value="#ddd"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </UserControl.Styles>
    
    <Grid>
        <!-- BOTTOM LEFT: Action Buttons -->
        <StackPanel VerticalAlignment="Bottom" 
                    HorizontalAlignment="Left"
                    Orientation="Horizontal" 
                    Spacing="10">
            <!-- Mods (Disabled pending rewrite) -->
            <!--
            <btn:IconButton Command="{Binding ToggleModsCommand}"
                            ButtonBackground="#2a2a2a"
                            Width="50" Height="50"
                            IconPath="/Assets/Icons/package.svg"
                            IconSize="24"/>
            -->
            
            <!-- Folder -->
            <btn:IconButton Command="{Binding OpenFolderCommand}"
                            ButtonBackground="#2a2a2a"
                            Width="50" Height="50"
                            IconPath="/Assets/Icons/folder.svg"
                            IconSize="24"/>
            
            <!-- Settings -->
            <btn:IconButton Command="{Binding ToggleSettingsCommand}"
                            ButtonBackground="#2a2a2a"
                            Width="50" Height="50"
                            IconPath="/Assets/Icons/settings.svg"
                            IconSize="24"/>
            
            <!-- Network/WiFi -->
            <btn:IconButton ButtonBackground="#2a2a2a"
                            Width="50" Height="50"
                            IconPath="/Assets/Icons/wifi.svg"
                            IconSize="24"/>
        </StackPanel>
        
        <!-- BOTTOM CENTER: Educational Text -->
        <TextBlock VerticalAlignment="Bottom" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,8">
            <Run Text="{Binding MainEducational^}" Foreground="#999" FontSize="12"/>
            <Run Text=" "/>
            <Run Text="{Binding MainBuyIt^}" Foreground="{DynamicResource SystemAccentBrush}" FontSize="12" FontWeight="Bold"/>
        </TextBlock>
        
        <!-- BOTTOM RIGHT: Play Button with Version Selector -->
        <Grid VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Border x:Name="PlaySplitButtonContainer"
                    CornerRadius="10"
                    ClipToBounds="True">
                <Grid ColumnDefinitions="Auto, Auto" Height="50">
                    <Button Classes="VersionAreaButton"
                            Command="{Binding OpenInstancesCommand}"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="6" VerticalAlignment="Center">
                            <svg:Svg Path="/Assets/Icons/git-branch.svg" Width="16" Height="16">
                                <svg:Svg.Css>* { stroke: #ddd !important; fill: #ddd !important; }</svg:Svg.Css>
                            </svg:Svg>
                            <TextBlock Text="{Binding SelectedBranchVersionLabel}" 
                                       FontSize="13" 
                                       Foreground="#ddd"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <btn:PrimaryButton Grid.Column="1"
                                       Command="{Binding LaunchCommand}"
                                       Height="50"
                                       Padding="18,0"
                                       CornerRadius="0,10,10,0"
                                       FontSize="18">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <svg:Svg Path="/Assets/Icons/play.svg" Width="20" Height="20">
                                <svg:Svg.Css>* { stroke: #111 !important; fill: #111 !important; }</svg:Svg.Css>
                            </svg:Svg>
                            <TextBlock Text="{Binding MainPlay^}" VerticalAlignment="Center" Foreground="#111"/>
                        </StackPanel>
                    </btn:PrimaryButton>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>