<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:HyPrism.UI.ViewModels"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Avalonia.Svg.Skia"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="100"
             x:Class="HyPrism.UI.Components.Dashboard.Header"
             x:DataType="vm:Dashboard.HeaderViewModel">
    
    <Grid>
        <!-- TOP LEFT: Profile -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="12">
                <!-- Avatar -->
                <Border Width="48" Height="48" CornerRadius="24" 
                        Background="{DynamicResource SystemAccentBrush}" 
                        ClipToBounds="True">
                    <TextBlock Text=":)" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center" 
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#111"/>
                </Border>
                
                <!-- Nick + Edit Button -->
                <StackPanel VerticalAlignment="Center" Spacing="2">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="{Binding Nick}" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="White"/>
                        <Button Command="{Binding ToggleProfileEditorCommand}"
                                Background="Transparent" 
                                Padding="4" 
                                CornerRadius="4"
                                VerticalAlignment="Center">
                            <svg:Svg Path="/Assets/Icons/edit.svg" Width="14" Height="14"/>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            
            <!-- Version -->
            <TextBlock Text="{Binding AppVersion^, StringFormat='{}{0}'}" 
                       FontSize="11" 
                       Foreground="#999"
                       Margin="4,0,0,0"/>
        </StackPanel>
        
        <!-- TOP RIGHT: Logo + Icons -->
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Right" Spacing="16">
            <!-- Hytale Logo -->
            <Image Source="/Assets/logo-wide.png" 
                   Width="180" 
                   Height="70" 
                   Stretch="Uniform"
                   HorizontalAlignment="Right"/>
            
            <!-- Action Icons -->
            <StackPanel Orientation="Horizontal" 
                        Spacing="8" 
                        HorizontalAlignment="Right">
                <!-- Discord -->
                <Button Background="#5865F2" 
                        Padding="8" 
                        CornerRadius="6"
                        Width="36" Height="36">
                    <svg:Svg Path="/Assets/Icons/discord.svg" Width="20" Height="20"/>
                </Button>
                
                <!-- GitHub -->
                <Button Background="#333" 
                        Padding="8" 
                        CornerRadius="6"
                        Width="36" Height="36">
                    <svg:Svg Path="/Assets/Icons/github.svg" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>