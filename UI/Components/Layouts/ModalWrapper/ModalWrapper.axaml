<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HyPrism.UI.Components.Layouts.ModalWrapper"
             x:Name="Root">

    <ContentPresenter Content="{Binding #Root.Content}"
                      Opacity="{Binding #Root.IsOpen, Converter={x:Static ObjectConverters.IsNotNull}}"
                      IsHitTestVisible="{Binding #Root.IsOpen}">
        <ContentPresenter.Transitions>
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.2" Easing="CubicEaseInOut"/>
            </Transitions>
        </ContentPresenter.Transitions>
    </ContentPresenter>
</UserControl>