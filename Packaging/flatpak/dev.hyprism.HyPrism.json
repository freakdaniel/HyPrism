{
  "app-id": "dev.hyprism.HyPrism",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "sdk-extensions": [
    "org.freedesktop.Sdk.Extension.golang",
    "org.freedesktop.Sdk.Extension.node22"
  ],
  "command": "HyPrism",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--share=network",
    "--device=dri",
    "--talk-name=org.freedesktop.Notifications",
    "--env=LD_LIBRARY_PATH=/app/lib"
  ],
  "modules": [
    {
      "name": "libpng",
      "buildsystem": "autotools",
      "sources": [
        {
          "type": "archive",
          "url": "https://download.sourceforge.net/libpng/libpng-1.6.43.tar.xz",
          "sha256": "6a5ca0652392a2d7c9db2ae5b40210843c0bbc081cbd410825ab00cc59f14a6c"
        }
      ]
    },
    {
      "name": "SDL3",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DSDL_STATIC=OFF",
        "-DSDL_TEST=OFF"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libsdl-org/SDL.git",
          "tag": "release-3.2.8"
        }
      ]
    },
    {
      "name": "SDL3_image",
      "buildsystem": "cmake-ninja",
      "config-opts": [
        "-DSDL3IMAGE_PNG=ON",
        "-DSDL3IMAGE_BACKEND_STB=OFF"
      ],
      "sources": [
        {
          "type": "git",
          "url": "https://github.com/libsdl-org/SDL_image.git",
          "tag": "release-3.2.4"
        }
      ]
    },
    {
      "name": "HyPrism",
      "buildsystem": "simple",
      "build-commands": [
        "install -d /app/lib/hyprism",
        "install -Dm755 bundle/HyPrism /app/lib/hyprism/HyPrism",
        "cp -R bundle/wwwroot /app/lib/hyprism/ 2>/dev/null || true",
        "cp -R bundle/runtimes /app/lib/hyprism/ 2>/dev/null || true",
        "install -Dm644 bundle/jre.json /app/lib/hyprism/jre.json 2>/dev/null || true",
        "install -d /app/bin",
        "printf '#!/bin/sh\\nexec /app/lib/hyprism/HyPrism --wrapper \"$@\"' > /app/bin/HyPrism",
        "chmod +x /app/bin/HyPrism",
        "install -Dm644 dev.hyprism.HyPrism.png /app/share/icons/hicolor/256x256/apps/dev.hyprism.HyPrism.png",
        "install -Dm644 dev.hyprism.HyPrism.desktop /app/share/applications/dev.hyprism.HyPrism.desktop",
        "install -Dm644 dev.hyprism.HyPrism.metainfo.xml /app/share/metainfo/dev.hyprism.HyPrism.metainfo.xml"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "bundle",
          "dest": "bundle"
        },
        {
          "type": "file",
          "path": "dev.hyprism.HyPrism.png"
        },
        {
          "type": "file",
          "path": "dev.hyprism.HyPrism.desktop"
        },
        {
          "type": "file",
          "path": "dev.hyprism.HyPrism.metainfo.xml"
        }
      ]
    }
  ]
}
